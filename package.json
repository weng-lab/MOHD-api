{
  "name": "learn-hono",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build ./src/index.ts --target=bun --outdir=./dist",
    "start": "bun dist/index.js",
    "db:up": "bun migrations/up.ts",
    "db:down": "bun migrations/down.ts",
    "db:seed": "bun test/seed.ts",
    "db:start": "docker compose up -d db",
    "db:stop": "docker compose down",
    "db:reset": "bun db:down && bun db:up && bun db:seed"
  },
  "dependencies": {
    "@hono/graphql-server": "^0.7.0",
    "@hono/zod-validator": "^0.7.6",
    "graphql": "^16.12.0",
    "hono": "^4.11.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
